{# -----------------------------
variables
----------------------------- #}

{% set title = title ?? null %}
{% set image = image ?? null %}
{% set description = description ?? null %}
{% set url = url ?? null %}

{# -----------------------------
template
----------------------------- #}

<article class="c-projectcard">
  <a class="c-projectcard__link" href="{{ url }}">
    <div class="c-projectcard__media">
      {# Dans craft les champs relationnels renvoient TOUJOURS UN TABLEAU D'OBJETS
        - dans ce cas-ci nous n'avons qu'un seul item (une image)
        - on utilise .one() ou collect().first() pour aller chercher ce premier item #}
      {% if image %}
        <img src="{{ image.getUrl({ width: 450, height: 600 }) }}"
            srcset="{{ image.getUrl({ width: 450, height: 600 }) }} 450w,
                    {{ image.getUrl({ width: 600, height: 800 }) }} 600w"
            sizes="(min-width: 1500px) 345px,
                    (min-width: 1024px) 25vw
                    (min-width: 500px) 50vw,
                    100vw"
            class="o-fluidimg"
            width="600"
            height="800"
            alt="">
      {% endif %}

    </div>
    <div class="c-projectcard__body">
      <h3 class="c-projectcard__title">{{ title }}</h3>
      <p class="c-projectcard__tagline">{{ description }}</p>
    </div>
  </a>
</article>