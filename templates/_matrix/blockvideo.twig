{# --------------------------
variables
-------------------------- #}
{% set service = service ?? null %}
{% set id = id ?? null %}
{% set caption = caption ?? null %}
{% set videoUrl = null %}

{% if id and service %}
  {% set videoUrl = "https://www.youtube.com/embed/#{id}" %}
  {% if service == "vimeo" %}
    {% set videoUrl = "https://player.vimeo.com/video/#{id}" %}
  {% endif %}
{% endif %}

{# --------------------------
template
-------------------------- #}

<div class="c-casemodule">
  <div class="l-container">
    <figure class="c-figure">
      <div class="o-fluidvideo">
        <iframe src="{{ videoUrl }}" width="1500" height="844"></iframe>
      </div>
      <figcaption class="c-figure__caption">{{ caption }}</figcaption>
    </figure>
  </div>
</div>